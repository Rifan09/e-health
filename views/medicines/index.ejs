<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Daftar Obat</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-8">
    <div class="max-w-6xl mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Daftar Obat</h1>
            <div class="flex space-x-4">
                <a 
                href="/" 
                class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 transition"
            >
                ke halaman utama
            </a>
            <a 
                href="/medicines/addobat" 
                class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition"
            >
                + Tambah Obat Baru
            </a>
            </div>
        </div>

        <div class="bg-white shadow-md rounded overflow-x-auto"> <!-- Tambahkan overflow-x-auto -->
            <table class="w-full table-auto"> <!-- Tambahkan table-auto -->
                <thead class="bg-gray-200">
                    <tr>
                        <th class="p-3 text-left">ID Obat</th>
                        <th class="p-3 text-left">Nama Obat</th>
                        <th class="p-3 text-left">Kategori</th>
                        <th class="p-3 text-left">Harga</th>
                        <th class="p-3 text-left">Ketersediaan</th>
                        <th class="p-3 text-left">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% medicines.forEach(medicine => { %>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="p-3"><%= medicine.ID_Obat %></td>
                            <td class="p-3"><%= medicine.Nama_Obat %></td>
                            <td class="p-3"><%= medicine.Kategori %></td>
                            <td class="p-3">Rp <%= medicine.Harga.toLocaleString() %></td>
                            <td class="p-3">
                                <span class="<%= medicine.Ketersediaan ? 'text-green-600' : 'text-red-600' %>">
                                    <%= medicine.Ketersediaan ? 'Tersedia' : 'Tidak Tersedia' %>
                                </span>
                            </td>
                            <td class="p-3">
                                <div class="flex space-x-2">
                                    <a 
                                        href="/medicines/<%= medicine._id %>/edit" 
                                        class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 transition text-sm"
                                    >
                                        Edit
                                    </a>
                                    <form 
                                        action="/medicines/<%= medicine._id %>?_method=DELETE" 
                                        method="POST"
                                        onsubmit="return confirm('Apakah Anda yakin ingin menghapus obat ini?');"
                                        class="inline"
                                    >
                                        <button 
                                            type="submit" 
                                            class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 transition text-sm"
                                        >
                                            Hapus
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>